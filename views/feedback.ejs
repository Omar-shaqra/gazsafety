<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Feedback</title>
    <style>
      :root {
--main-color: #28A7E9;  
}
      h2 {
        border-bottom: 4px solid var(--main-color);
        padding-bottom: 20px;
        text-align:center;
        margin:0 18% 40px;
      }
      .decorated {
          color: var(--main-color)
      }
      table thead {
          background-color: var(--main-color);
          color: #fff;
          font-size: 16px;
      }
      tbody {
        text-align: center;
      }
      .btn { 
          border: 2px solid var(--main-color) !important;
          border-radius:20px;
      }
      .btn:hover {
          background-color: var(--main-color) !important;
          color:#fff
      }
      /* form */
      form {
        text-align: center;
      }
      .form-group {
          margin: 0 30px 30px;
      }
      .form-check {
        display: inline;
        margin: 0 10px;
      }
      form input, 
      form textarea {
          border: 1px solid var(--main-color);
          border-radius: 1rem;
          padding: 10px;
      }
      textarea {width: 100%;}
      textarea:focus {border: none}
      /* form button {
          border-radius: 25px;
          width: 100px;
          height: 25px;
          cursor: pointer;
          background: var(--main-color);
      } */
    </style>
  </head>
<script type="text/javascript">
function goBack() {
window.history.back();
}
</script>

  <body>
    <div class="container-flauid p-5 text-center">
      <button class="btn btn-primary" onclick="goBack()" style="position: relative;">Go Back</button>

        

          <h2>Maintainance <span class="decorated">Feedback</span> </h2>
          

          <form class="text-center" method="post">
            <input type="hidden" name="id" value="worker._id">
            <div class="form-group">
              <label for="rate">Rate:</label>
              <!-- Start Rate -->
              <div class="form-check">
                <input class="form-check-input" type="radio" name="rate" id="exampleRadios1" value="option1" checked>
                <label class="form-check-label" for="exampleRadios1">
                  very bad
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="rate" id="exampleRadios2" value="option2">
                <label class="form-check-label" for="exampleRadios2">
                  bad
                </label>
              </div>
              <div class="form-check ">
                <input class="form-check-input" type="radio" name="rate" id="exampleRadios3" value="option3" >
                <label class="form-check-label" for="exampleRadios3">
                  good
                </label>
              </div>
              <div class="form-check ">
                <input class="form-check-input" type="radio" name="rate" id="exampleRadios4" value="option4" >
                <label class="form-check-label" for="exampleRadios4">
                  very good
                </label>
              </div>
              
              <!-- End Rate -->
              <!-- <input type="text" placeholder="rate:" name="rate" value=""> -->
            </div>
            <div class="form-group">
              <textarea class="form-control" name="note" placeholder="any comment about the worker will help :" required rows="8" cols="80"></textarea>
            </div>
            <button type="submit" name="button" class="btn">submit</button>
          </form>
    </div>


  </body>
</html>
